{
    "name": "http-client/http-client",
    "description": "Http Clinet for API requests.",
    "keywords": [
        "wechat",
        "aliyun",
        "dingtalk",
        "api"
    ],
    "homepage": "https://http-client.com",
    "authors": [
        {
            "name": "mingyoung",
            "email": "mingyoungcheung@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "symfony/http-client": "^5.0",
        "pimple/pimple": "^3.3"
    },
    "require-dev": {
        "mockery/mockery": "^1.3",
        "phpunit/phpunit": "^8.5"
    },
    "autoload": {
        "psr-4": {
            "HttpClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HttpClient\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
