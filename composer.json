{
    "name": "weforge/weforge",
    "description": "WeForge",
    "keywords": [
        "wechat"
    ],
    "authors": [
        {
            "name": "mingyoung",
            "email": "mingyoungcheung@gmail.com"
        }
    ],
    "require": {
        "php": "^7.3",
        "ext-json": "*",
        "ext-openssl": "*",
        "guzzlehttp/guzzle": "^6.4",
        "league/pipeline": "^1.0",
        "monolog/monolog": "^1.12 || ^2.0",
        "symfony/cache": "^4.3",
        "symfony/http-foundation": "^4.3"
    },
    "require-dev": {
        "laravel/lumen-framework": "^6.0",
        "orchestra/testbench": "^4.3",
        "phpunit/phpunit": "dev-master"
    },
    "extra": {
        "laravel": {
            "providers": [
                "WeForge\\Integrations\\Laravel\\WeForgeServiceProvider"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "WeForge\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WeForge\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
