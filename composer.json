{
    "name": "http-client/core",
    "description": "Http Client for API requests.",
    "keywords": [
        "wechat",
        "aliyun",
        "dingtalk",
        "api"
    ],
    "homepage": "https://http-client.com",
    "license": "MIT",
    "authors": [
        {
            "name": "mingyoung",
            "email": "mingyoungcheung@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "guzzlehttp/guzzle": "^6.5",
        "http-client/plugin": "^1.0",
        "league/container": "^3.3",
        "league/event": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5"
    },
    "autoload": {
        "psr-4": {
            "HttpClient\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "HttpClient\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
