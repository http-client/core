{
    "name": "http-client/http-client",
    "description": "Http Clinet for API requests.",
    "keywords": [
        "wechat", "aliyun"
    ],
    "homepage": "https://http-client.com",
    "authors": [
        {
            "name": "mingyoung",
            "email": "mingyoungcheung@gmail.com"
        }
    ],
    "require": {
        "php": "^7.3",
        "guzzlehttp/guzzle": "^6.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "mockery/mockery": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "HttpClient\\": "src/"
        }
    },
    "autoload-dev": {
