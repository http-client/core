{
    "name": "weforge/weforge",
    "description": "WeForge",
    "keywords": [
        "wechat"
    ],
    "authors": [
        {
            "name": "mingyoung",
            "email": "mingyoungcheung@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-openssl": "*",
        "guzzlehttp/guzzle": "^6.4",
        "league/pipeline": "^1.0",
        "symfony/cache": "^4.3",
        "symfony/http-foundation": "^4.3"
    },
    "require-dev": {
        "orchestra/testbench": "^4.3",
        "phpunit/phpunit": "^8.4"
    },
    "extra": {
        "laravel": {
            "providers": [
                "WeForge\\WeForgeServiceProvider"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "WeForge\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WeForge\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
